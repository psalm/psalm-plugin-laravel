<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    errorLevel="1"
    findUnusedCode="true"
    resolveFromConfigFile="false"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    errorBaseline="../psalm-plugin-laravel/tests/lumen-test-baseline.xml"
    phpVersion="8.0"
>
    <projectFiles>
        <directory name="app"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\LaravelPlugin\Plugin"/>
    </plugins>

    <issueHandlers>
        <ParamNameMismatch errorLevel="suppress" />
        <PossiblyUnusedParam errorLevel="suppress" /><!-- Default Listeners have empty methods with unused params, created just for example -->
    </issueHandlers>
</psalm>
