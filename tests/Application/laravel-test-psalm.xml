<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    errorLevel="1"
    findUnusedBaselineEntry="false"
    findUnusedCode="false"
    resolveFromConfigFile="false"
    xsi:schemaLocation="https://getpsalm.org/schema/config ../../vendor/vimeo/psalm/config.xsd"
    errorBaseline="../../tests/Application/laravel-test-psalm-baseline.xml"
>
    <projectFiles>
        <directory name="app"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\LaravelPlugin\Plugin">
            <failOnInternalError>true</failOnInternalError>
        </pluginClass>
    </plugins>

    <issueHandlers>
        <ParamNameMismatch errorLevel="suppress" />
        <PossiblyUnusedParam errorLevel="suppress" /><!-- Default Listeners, Notifications have empty methods with unused params, created just for example -->
        <ClassMustBeFinal errorLevel="suppress" />
        <MissingOverrideAttribute errorLevel="suppress" />
        <MissingPureAnnotation errorLevel="suppress" />
        <UnusedClass errorLevel="suppress" />
    </issueHandlers>
</psalm>
